<form action="/periodic/sites/new" method="post" autocomplete="on" id="site_create_form" name="site_create_form" class="form-horizontal text-left">

    <input type="hidden" name="_csrf" value=<%= token %> >

    <div class="control-group">
        <label class="control-label" for="inputTitle">Title</label>
        <div class="controls">
            <input type="text" id="inputTitle" name="title" placeholder="The New York Times">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="inputDescription">Description</label>
        <div class="controls">
            <textarea class="form-control" name="description" rows="3"></textarea>

        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn btn-success">Create</button>
        </div>
    </div>  
